{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Definitions",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "dependencies": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9._-]*[A-Za-z0-9])$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "index": {
              "type": "string",
              "pattern": "^http[s]?://(?:[a-zA-Z]|[0-9]|[$-_@.&+]|[!*\\(\\),]|(?:%[0-9a-fA-F][0-9a-fA-F]))+$"
            },
            "git": {
              "type": "string",
              "pattern": "^http[s]?://(?:[a-zA-Z]|[0-9]|[$-_@.&+]|[!*\\(\\),]|(?:%[0-9a-fA-F][0-9a-fA-F]))+$"
            },
            "ref": {
              "type": "string",
              "pattern": "^[A-Za-z0-9/\\.\\-_]+$"
            },
            "version": {
              "$ref": "#/definitions/version_specifier"
            }
          }
        }
      }
    },
    "resource_name": {
      "type": "string",
      "pattern": "[a-zA-Z_][a-zA-Z0-9_]*"
    },
    "private_key_path": {
      "type": "string"
    },
    "ledger_api": {
      "type": "object"
    },
    "author": {
      "type": "string",
      "pattern": "[a-zA-Z_][a-zA-Z0-9_]*"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
    },
    "fingerprint": {
      "oneOf": [
        {"type": "string"},
        {"type": "object"}
      ]
    },
    "public_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_]*/[a-zA-Z_][a-zA-Z0-9_]*:(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
    },
    "version_specifier": {
      "type": "string",
      "pattern": "^(( *(~=|==|>=|<=|!=|<|>) *)([1-9][0-9]*!)?(0|[1-9][0-9]*)(\\.(0|[1-9][0-9]*))*((a|b|rc)(0|[1-9][0-9]*))?(\\.post(0|[1-9][0-9]*))?(\\.dev(0|[1-9][0-9]*))?)?$"
    },
    "aea_version": {
      "type": "string",
      "oneOf": [
        {"$ref":  "#/definitions/version_specifier"},
        {"$ref":  "#/definitions/version"}
      ]
    }
  }
}