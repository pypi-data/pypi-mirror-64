{
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [100],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "restructuredtext.linter.extraArgs": [
        "--max-line-length 100",
    ],
    "restructuredtext.confPath": "${workspaceFolder}/docs",
}
