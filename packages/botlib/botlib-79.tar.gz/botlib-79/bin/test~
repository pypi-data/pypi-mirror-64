#!/usr/bin/python3
#
# run unittests.

__version__ = 1

import os,sys ; sys.path.insert(0, os.getcwd())

import lo
import os
import shutil
import time
import unittest

from lo.shl import execute, level, parse_cli 
from lo.tms import elapsed

from bot import k, starttime

opts = [
    ('-b', '--bork', 'store_true', False, 'bork on exception.', 'bork'),
    ('-v', '--verbose', 'store_true', False, 'enable verbose mode.', 'verbose'),
    ('-m', '--modules', 'store', str, "", 'modules to load.', 'modules'),
    ('-w', '--workdir', 'store', str, "testdata", 'set working directory.', 'workdir'),
    ('-l', '--loglevel', 'store', str, "error", 'set loglevel.', 'level'),
    ('-a', '--logfile', 'store', str, "logs/bot.log", 'file to log to.', 'logfile'),
]


resume = {}

def main():
    try:
        shutil.rmtree("testdata")
    except FileNotFoundError:
        pass
    parse_cli("test", __version__, opts)
    level(lo.cfg.level, lo.cfg.logfile)
    lo.cfg.debug = True
    lo.cfg.bork = True
    k.walk("bot")
    k.start()
    lo.workdir = "testdata"
    lo.cdir("testdata")
    test_path = os.getcwd() + os.sep + "tests"
    p = "test_*"
    suite = unittest.loader.TestLoader().discover(test_path, pattern=p)
    unittest.TextTestRunner(verbosity=3).run(suite)
    res =  os.popen("python3 -m doctest -v -o ELLIPSIS tests/*.txt").read()
    if lo.cfg.verbose:
        print(res)
   
execute(main)
print(elapsed(time.time() - starttime))
os._exit(0)
