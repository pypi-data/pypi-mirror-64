<!doctype html>
<html>
<head>
<title>{% block title %}{% endblock %}</title>
{% block css %}
<link rel="stylesheet" type="text/css" href="{{ request.scheme }}://yui.yahooapis.com/combo?3.2.0/build/cssreset/reset-min.css&3.2.0/build/cssgrids/grids-min.css&3.2.0/build/cssbase/base-min.css" />
<link rel="stylesheet" href="{{request.static_url('stucco_auth:static/stucco_auth.css')}}" />
{% endblock %}
{% block js %}{% endblock %}
</head>
<body>
{% set flash = request.session.pop_flash() %}
{% if flash %}
<ul id="flash">
{% for message in flash %}
<li>{{ message }}</li>
{% endfor %}
</ul>
{% endif %}
<div id="content">
{% block content %}
{% endblock %}
</div>
</body>
</html>
