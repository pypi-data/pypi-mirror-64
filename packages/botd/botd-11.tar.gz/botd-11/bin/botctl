#!/usr/bin/python3 -u
# BOTLIB - Framework to program bots.
#
# bin/botctl (bot control)

import os,sys ; sys.path.insert(0, os.getcwd())

import lo

from lo.shl import execute, level, parse_cli
from bot import k, __version__

opts = [
    ('-m', '--modules', 'store', str, "", 'modules to load.', 'modules'),
    ('-w', '--workdir', 'store', str, "/var/lib/botd", 'set working directory.', 'workdir'),
    ('-l', '--loglevel', 'store', str, "error", 'set loglevel.', 'level'),
    ('-a', '--logfile', 'store', str, "/var/log/botd/botd.log", 'file to log to.', 'logfile'),
]

def main():
    parse_cli("botctl", __version__, opts, """botctl <cmd>""")
    level(lo.cfg.level, lo.cfg.logfile)
    k.walk("bot")
    k.cmd(lo.cfg.txt)
    
execute(main)
os._exit(0)
